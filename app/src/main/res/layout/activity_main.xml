<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.troy.checkeditbutton.MainActivity">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_content_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="内容1"
        android:textColorHint="@android:color/darker_gray"
        android:text=""
        android:textSize="14sp"
        android:textColor="@android:color/black"/>
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_content_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="内容2"
        android:textColorHint="@android:color/darker_gray"
        android:text=""
        android:textSize="14sp"
        android:textColor="@android:color/black"/>
    <com.troy.checkeditbutton.CheckEditButton
        android:id="@+id/cbt_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="确认提交"
        app:clickable_bg="@drawable/btn_clickable_bg"
        app:unClickable_bg="@drawable/btn_unclickable_bg"
        app:clickable_text_color="@android:color/white"
        app:unClickable_text_color="@android:color/darker_gray"/>


</LinearLayout>
